<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:id="@+id/fad_anim"
            android:layout_gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileids"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="15sp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="6dp"
                android:src="@drawable/man"
                app:civ_border_color="#FFFFFFFF"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/nmes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:maxLength="15"
                android:text="@string/app_name"
                android:textColor="#fe980f"
                android:textSize="14dp"
                android:textStyle="bold">

            </TextView>



        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/todaoeds"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nmes"
                android:layout_marginTop="10dp"
                android:text="Electrical Engneer"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="serif"
                android:textSize="15dp"
                android:textColor="#fe980f"
                >
            </TextView>

        </LinearLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="25dp"
        android:elevation="100dp"
        android:id="@+id/order_now"
        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:fadingEdgeLength="20dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="10dp"

        app:cardElevation="100dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="#FF9800"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:fadingEdgeLength="20dp"
            android:foregroundGravity="center"
            app:cardElevation="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MADADGAR ONLINE"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                tools:ignore="MissingConstraints" />
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            android:id="@+id/completeord"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pendig_order"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/baloo"
                    android:gravity="center"
                    android:text="Complete orders"
                    android:textColor="#DC012535"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/todaycmplt"
                    android:gravity="center"
                    android:text=""></TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            android:id="@+id/wihtdrword"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ccc"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="14sp"
                    android:textColor="#DC012535"
                    android:layout_marginTop="4dp"
                    android:text="Withdraw orders"
                    android:fontFamily="@font/baloo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/todaywdhr"
                    android:gravity="center"
                    android:text=""></TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <include layout="@layout/card_services">
    </include>

</LinearLayout>